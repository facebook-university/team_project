<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/maroon</item>
        <item name="colorPrimaryDark">@color/maroon</item>
        <item name="colorAccent">@color/maroon</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="noAnimTheme" parent="AppTheme">
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/darkGrey</item>
        <item name="colorControlActivated">@color/maroon</item>
    </style>
</resources>
