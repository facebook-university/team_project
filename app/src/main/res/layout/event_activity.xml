<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/create_fundraiser_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/createTextView"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/tvPickRestaurant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/greyBackground"
                android:text="@string/pickRestaurantTextView"
                android:textSize="14dp" />

            <AutoCompleteTextView
                android:id="@+id/acSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/places_autocomplete_search_hint"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/greyBackground"
                android:text="@string/chooseDateTextView" />

            <CalendarView
                android:id="@+id/cvChooseDate"
                android:layout_width="match_parent"
                android:layout_height="314dp"
                android:layout_marginBottom="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvStart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/greyBackground"
                    android:gravity="center"
                    android:text="@string/startTimeTextView" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/startHour"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <Spinner
                        android:id="@+id/startMin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <Spinner
                        android:id="@+id/startHalf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">

                <TextView
                    android:id="@+id/tvEnd"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/greyBackground"
                    android:gravity="center"
                    android:text="@string/endTimeTextView" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/endHour"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <Spinner
                        android:id="@+id/endMin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <Spinner
                        android:id="@+id/endHalf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/greyBackground"
                android:text="@string/eventDescriptionTextView"
                android:textSize="14sp"
                android:gravity="center"/>

            <EditText
                android:id="@+id/etEventInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="start|top"
                android:hint="@string/eventDescriptionHint"
                android:inputType="textMultiLine"
                android:textSize="14sp"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:id="@+id/tvVoucherUpload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Uploader Voucher Image"
                android:background="@color/greyBackground"
                android:gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:id="@+id/ivVoucherImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:srcCompat="@android:drawable/ic_menu_camera" />

                <Button
                    android:id="@+id/btnChoosePhoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Choose photo" />
            </LinearLayout>

            <Button
                android:id="@+id/create_event"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00C853"
                android:fontFamily="sans-serif"
                android:text="@string/createEvent"
                android:textColor="#E6575151"
                android:layout_marginBottom="40dp"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>

